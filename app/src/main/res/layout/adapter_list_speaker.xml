<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginRight="@dimen/activity_margin"
    android:layout_marginLeft="@dimen/activity_margin"
    android:layout_marginTop="@dimen/activity_margin"
    android:maxHeight="@dimen/card_view_max_height"
    android:elevation="@dimen/activity_margin"
    app:cardCornerRadius="@dimen/activity_margin"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/card_view_margin"
        android:orientation="horizontal">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imageViewImage"
            android:layout_width="@dimen/card_view_image"
            android:layout_height="@dimen/card_view_image"
            android:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_margin="@dimen/activity_margin"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textViewName"
                android:text="@string/name"
                android:textStyle="bold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_title"/>

            <TextView
                android:id="@+id/textViewFormation"
                android:text="@string/formation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_content"/>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>